# Description : Description
# The default vim-snippets filetype priority is -50
# For Self-Customizable snippet , set the priority to -45

priority -45

#################
#  Anchor Jump  #
#################
snippet alink "Anchor Jump" w
[${1:${VISUAL:Text}}](#${2:id})

<span id="$2">$1</span>
endsnippet

# Override script of default vim-script 
###########################
# Sections and Paragraphs #
###########################
snippet sec "Section" b
# ${1:Section Name}
$0
endsnippet

snippet ssec "Sub Section" b
## ${1:Section Name}
$0
endsnippet

snippet sssec "SubSub Section" b
### ${1:Section Name}
$0
endsnippet

snippet par "Paragraph" b
#### ${1:Paragraph Name}
$0
endsnippet

snippet spar "Paragraph" b
##### ${1:Paragraph Name}
$0
endsnippet

################
# Common stuff #
################
snippet link "Link to something"
[${1:${VISUAL:Text}}](${2:www.url.com})$0
endsnippet

# for hexo image insert
snippet himg "hexo insert image"
![](./images/${1:imagename})$0
endsnippet

# for subtile
snippet #3 "SubSub Section" b
### ${1:Section Name}
$0
endsnippet

snippet #4 "SubSub Section" b
#### ${1:Section Name}
$0
endsnippet

# Read more
snippet hmore "Read more" b
<!-- more -->
$0
endsnippet


global !p

ANTI_QUOTE = "`"

def triple_anti_quotes(snip):
	return ANTI_QUOTE * 3

endglobal

snippet cc "code block (triple quotes)"
`!p snip.rv = triple_anti_quotes(snip)`
${1:${VISUAL:code}}
`!p snip.rv = triple_anti_quotes(snip)`
endsnippet
