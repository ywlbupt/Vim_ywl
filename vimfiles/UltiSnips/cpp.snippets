#######################################################################

snippet oper<< "operator << define " b
ostream& operator<<(ostream &out, const ${1:class_name} &${2:x}){
	${3:/* content */}
	return out;
}
endsnippet

snippet oper>> "operator >> define " b
istream& operator>>(istream &in, ${1:class_name} &${2:x}){
	${3:/* content */}
	return in;
}
endsnippet

